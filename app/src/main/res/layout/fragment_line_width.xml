<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lineWidthDialogGridLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="1"
    android:orientation="vertical"
    android:padding="@dimen/activity_padding"
    android:useDefaultMargins="true"
    tools:context=".LineWidthDialogFragment">

    <ImageView
        android:id="@+id/widthImageView"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/line_imageview_height"
        android:layout_gravity="fill_horizontal"
        android:contentDescription="@string/line_imageview_description" />

    <SeekBar
        android:id="@+id/widthSeekBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:max="50"
        android:progressTint="@color/colorAccent"
        android:thumbTint="@color/colorPrimary" />
</GridLayout>